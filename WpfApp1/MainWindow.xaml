        <Border BorderBrush="Black" Background="Ivory" BorderThickness="1" CornerRadius="3" HorizontalAlignment="Left" Height="32" Margin="18,366,0,0" VerticalAlignment="Top" Width="223" Grid.ColumnSpan="2" Grid.Column="2"/>
